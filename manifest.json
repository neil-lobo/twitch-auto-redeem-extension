{
	"name": "Twitch Auto-Redem Channel Points",
	"version": "1.3.1",
	"description": "Auto-redeems Twitch channel points rewards for you!",
	"manifest_version": 2,
	"permissions": ["storage"],
	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["https://*.twitch.tv/*"],
			"js": ["js/redeem.js"]
		}
	],
	"browser_action": {
		"default_popup": "menu.html"
	},
	"icons": {
		"120": "static/icon.png"
	}
}
